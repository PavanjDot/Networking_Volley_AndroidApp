<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormSignupActivity" android:orientation="vertical">

    <ImageView android:layout_width="450dp" android:layout_height="239dp"
               android:src="@drawable/signup"

    />

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="@drawable/signup_form_rounded_corner"
              android:hint=" Email "
              android:textSize="25sp"
              android:inputType="textEmailAddress"
              android:layout_margin="5dp"
              android:padding="5dp"

              android:drawableRight="@drawable/signup_vector_email" android:id="@+id/signup_form_edtemail"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="@drawable/signup_form_rounded_corner"
              android:hint=" Username "
              android:textSize="25sp"
              android:inputType="text"
              android:layout_margin="5dp"
              android:padding="5dp"

              android:drawableRight="@drawable/signup_vector_username"
              android:id="@+id/signup_form_edtusername"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="@drawable/signup_form_rounded_corner"
              android:hint=" Password"
              android:textSize="25sp"
              android:inputType="textPassword"
              android:layout_margin="5dp"
              android:padding="5dp"

              android:drawableRight="@drawable/signup_vector_password" android:id="@+id/signup_form_edtpassword"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
              android:background="@drawable/signup_form_rounded_corner"
              android:hint=" Confirm password"
              android:textSize="25sp"
              android:inputType="textPassword"
              android:layout_margin="5dp"
              android:padding="5dp"

              android:drawableRight="@drawable/signup_vector_confirmpassword"
              android:id="@+id/signup_form_edtconfirmpassword"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Signup"
            android:background="@drawable/signup_form_rounded_button"
            android:textSize="24sp" android:textColor="@android:color/white" android:id="@+id/signup_form_btnsignup"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:text="Login"
            android:background="@drawable/signup_form_rounded_button"
            android:textSize="24sp" android:textColor="@android:color/white" android:id="@+id/signup_form_btnlogin"/>


</LinearLayout>