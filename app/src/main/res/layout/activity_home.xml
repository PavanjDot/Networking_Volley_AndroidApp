<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeActivity"
        android:orientation="vertical"
>


    <ImageView
            android:layout_width="250dp"
            android:layout_height="367dp"
            app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imgTaken"
            android:layout_weight="1"
            android:layout_gravity="center"


    />

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"

              android:hint="File Name"
              android:background="@drawable/signup_form_rounded_corner"
              android:textSize="25sp"
              android:layout_margin="10dp"
              android:inputType="text"
              android:id="@+id/edt_filename"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"

              android:hint="Part Number"
              android:background="@drawable/signup_form_rounded_corner"
              android:textSize="25sp"
              android:layout_margin="10dp"
              android:inputType="number"
              android:id="@+id/edt_partnumber"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Open Gallery"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="@drawable/signup_form_rounded_button"
            android:id="@+id/btn_openGallary"
    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Upload Image"
            android:textSize="25dp"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:background="@drawable/signup_form_rounded_button"
            android:id="@+id/btn_uploadImage"
    />




</LinearLayout>