<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FormSigninActivity"
        android:orientation="vertical"
        android:background="@drawable/signin_form_backgroundcolor"


>

    <ImageView android:layout_width="200dp" android:layout_height="200dp"
               android:layout_marginLeft="100dp"
               android:layout_marginTop="80dp"
               android:src="@drawable/login"
               android:id="@+id/imgLoginImage"
    />

    <EditText android:layout_width="match_parent"
              android:shadowColor="#FF3031"
              android:layout_height="wrap_content"

              android:hint="Email"
              android:textSize="30dp"
              android:inputType="textEmailAddress"
              android:padding="5dp"
              android:drawableRight="@drawable/signup_vector_email"
              android:id="@+id/login_form_edtemail"


              android:background="@drawable/siginin_form_rounded_corner" android:layout_margin="10dp"/>

    <EditText android:layout_width="match_parent" android:shadowColor="#FF3031" android:layout_height="wrap_content"

              android:hint="Password"
              android:textSize="30sp"
              android:inputType="textPassword"
              android:padding="5dp"
              android:drawableRight="@drawable/signup_vector_password"
              android:id="@+id/login_form_edtpassword"

              android:background="@drawable/siginin_form_rounded_corner" android:layout_margin="10dp"/>

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="SIGN IN"
            android:textSize="30sp"
            android:layout_marginTop="50dp"
            android:background="#FFF222"
            android:textColor="#2C3335 "
            android:id="@+id/login_form_btnlogin"

    />

    <Button android:layout_width="match_parent" android:layout_height="wrap_content"

            android:text="SIGN UP"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:background="#FF3031"
            android:textColor="#DAE0E2"
            android:id="@+id/login_form_btnsignup"


    />


</LinearLayout>